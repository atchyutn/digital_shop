%h1
  Categories

%table.table
  %thead.thead-dark
    %tr
      %th{:scope => "col"} #
      %th{:scope => "col"} Name
      %th{:scope => "col"} Created By
      %th{:scope => "col"} Actions
  %tbody
    - @categories.each do |category|
      %tr
        %td #{category.id}
        %td 
          = link_to(category.name, admin_category_path(category)) 
        %td #{User.find(category.created_by).first_name}
        %td 
          = link_to('', edit_admin_category_path(category), {class: 'btn btn-primary fa fa-pencil'}) |
          = link_to('', admin_category_path(category), method: :delete,
                data: { confirm: 'Are you certain you want to delete this?' }, 
                class: 'btn btn-danger fa fa-trash')

