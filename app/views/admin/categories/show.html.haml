%h2
  #{@category.name} - Products

%table.table
  %thead.thead-dark
    %tr
      %th{:scope => "col"} #
      %th{:scope => "col"} Name
      %th{:scope => "col"} Category
      %th{:scope => "col"} Price
      %th{:scope => "col"} Offer Price
      %th{:scope => "col"} Actions
  %tbody
    - @category.products.each do |product|
      %tr
        %td #{product.id}
        %td 
          = link_to(product.name, admin_product_path(product)) 
        %td #{product.category.name}
        %td #{product.price}
        %td #{product.offer_price}
        %td 
          = link_to('', edit_admin_product_path(product), {class: 'btn btn-primary fa fa-pencil'}) |
          = link_to('', admin_product_path(product), method: :delete,
              data: { confirm: 'Are you certain you want to delete this?' }, 
              class: 'btn btn-danger fa fa-trash')
