.container{:style => "margin-top:10%"}
  .row
    .col-md-5.offset-md-4
      %h2 User Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-group
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
        .form-group
          = f.label :first_name
          = f.text_field :first_name, autocomplete: 'first name', class: 'form-control'
        .form-group
          = f.label :last_name
          = f.text_field :last_name, autocomplete: 'last name', class: 'form-control'
        .form-group
          = f.label :country_code
          = f.text_field :country_code, autocomplete: 'country code', class: 'form-control'
        .form-group
          = f.label :phone_number
          = f.text_field :phone_number, autocomplete: 'phone number', class: 'form-control'
        .form-group
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: 'form-control'
        .form-group
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
        .form-group
          = f.submit "Sign up", class: 'btn btn-primary'
      = render "users/shared/links"

